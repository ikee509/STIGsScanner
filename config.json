{
    "log_level": "INFO",
    "scan_interval": 3600,
    "database_path": "/var/lib/stig-agent/stig.db",
    "backup_dir": "/var/lib/stig-agent/backups",
    "report_dir": "/var/lib/stig-agent/reports",
    "central_server": {
        "enabled": false,
        "url": "",
        "api_key": "",
        "verify_ssl": true
    },
    "scanners": {
        "file_permissions": {
            "enabled": true,
            "exclude_paths": []
        },
        "user_group": {
            "enabled": true,
            "exclude_users": []
        },
        "service": {
            "enabled": true,
            "exclude_services": []
        },
        "network": {
            "enabled": true,
            "exclude_ports": []
        }
    },
    "remediation": {
        "auto_approve": false,
        "backup_before_change": true,
        "max_concurrent_fixes": 1
    },
    "reporting": {
        "formats": ["json", "html"],
        "retention_days": 90,
        "email": {
            "enabled": false,
            "smtp_server": "",
            "smtp_port": 587,
            "smtp_user": "",
            "smtp_password": "",
            "from_address": "",
            "to_addresses": []
        }
    }
} 